<Page x:Name="_checkSaldoPage" x:Class="VendingDisplay.Screen.CheckSaldoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VendingDisplay.Screen"
      mc:Ignorable="d" Background="#DFF6FF"
      d:DesignHeight="450" d:DesignWidth="600">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Grid Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid Height="100" HorizontalAlignment="Left">
                    <Image x:Name="_tapImg" Width="150"/>
                </Grid>
                <TextBlock Grid.Column="1" Text="Tap Your Card"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="30"/>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
